{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Fetch",
      "WebSearch"
    ]
  },
  "env": {
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754846298344
  },
  "fileSuggestion": {
    "type": "command",
    "command": "python3 ~/.claude/hooks/hook_file_suggestion.py"
  }
}
