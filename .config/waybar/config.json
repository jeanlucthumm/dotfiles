{
  "layer": "top",
  "position": "bottom",
  "modules-right": ["custom/task", "custom/timew", "clock"],
  "modules-left": ["hyprland/workspaces"],
  "clock": {
    "format": "{:%H:%M}",
    "tooltip": true,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "format": {
        "today": "<span color='#458588'><b>{}</b></span>"
      }
    }
  },
  "actions": {
    "on-click-right": "mode",
    "on-click-forward": "tz_up",
    "on-click-backward": "tz_down",
    "on-scroll-up": "shift_up",
    "on-scroll-down": "shift_down"
  },
  "custom/timew": {
    "format": "{}",
    "interval": 5,
    "exec": "$HOME/Code/bin/task-timew-status.fish",
  },
  "hyprland/workspaces": {
    "format": " {icon} ",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "9": ""
    }
  },
  "battery": {
   	"bat": "BAT1",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
  }
}
